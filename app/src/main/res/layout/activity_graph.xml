<com.github.mikephil.charting.charts.LineChart
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_below="@+id/button_second_row"
    android:layout_marginTop="10dp"
    android:id="@+id/mchart">

</com.github.mikephil.charting.charts.LineChart>
</RelativeLayout>